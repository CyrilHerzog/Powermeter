<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#A0000000" /> <!-- Transparent color when pressed -->
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#000000" /> <!-- Black color for other states -->
        </shape>
    </item>
</selector>